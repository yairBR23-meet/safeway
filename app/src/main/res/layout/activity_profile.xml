<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/MainBgColor">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="257dp"
        tools:srcCompat="@drawable/profile_pic"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="80dp"
        android:background="@drawable/content_rounded_corners"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Name"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="255dp"
            android:textSize="17dp"
            android:layout_weight="1"
            android:text="Age" />


    </LinearLayout>


    <!-- either description or account details -->

    <TextView
        android:id="@+id/textView7"
        android:layout_width="384dp"
        android:layout_height="383dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/content_rounded_corners"
        android:padding="10dp"
        android:text="[Description or account details]"
        android:textSize="35dp" />


    <Button
        android:id="@+id/LogOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/log_out_btn"
        android:text="Log Out"
        tools:ignore="TextSizeCheck"></Button>

    <!-- <Button
        android:id="@+id/back"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Go back"
        android:layout_marginLeft="20dp"
        android:padding="15dp">
    </Button> -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/navbar_layout"
        android:gravity="center"
        android:minHeight="85dp">

        <ImageButton
            android:id="@+id/SettingsBtn"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/not_selected"
            android:padding="1dp"
            android:contentDescription="settings button"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/NavBtn"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/not_selected"
            android:padding="1dp"
            android:contentDescription="navigation button"
            android:scaleType="fitCenter"
            android:src="@drawable/nav_icon" />

        <ImageButton
            android:id="@+id/ProfileBtn"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/selected"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:contentDescription="profile button"
            android:src="@drawable/profile_pic" />

    </LinearLayout>


</LinearLayout>